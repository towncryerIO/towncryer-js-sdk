{
  "name": "@towncryerio/towncryer-js-sdk",
  "version": "1.1.0-ef4b908",
  "description": "TypeScript SDK for integrating with the Towncryer API",
  "author": "VolvLabs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/esm/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/towncryerIO/towncryer-js-sdk.git"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build:cjs": "tsc",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:umd": "esbuild ./src/index.ts --bundle --global-name=towncryerjssdk --outfile=dist/towncryer-js-sdk.js --format=iife",
    "build:umd:min": "esbuild ./src/index.ts --bundle --global-name=towncryerjssdk --outfile=dist/towncryer-js-sdk.min.js --format=iife --minify",
    "build": "npm run build:cjs && npm run build:esm && npm run build:umd && npm run build:umd:min",
    "prepare": "npm run build",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "jest",
    "test:debug": "node --inspect-brk -r ts-node/register -r tsconfig-paths/register node_modules/.bin/jest --runInBand --no-cache",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "generate-api-client": "./scripts/generate-api-client.sh",
    "use-local-api": "npm install file:.api-client-temp/towncryer-js-api-client",
    "use-remote-api": "npm install @towncryerio/towncryer-js-api-client@latest"
  },
  "keywords": [
    "towncryer",
    "sdk",
    "api",
    "client",
    "messaging",
    "communication"
  ],
  "license": "Commercial",
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@openapitools/openapi-generator-cli": "^2.7.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.4",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "esbuild": "^0.25.9",
    "eslint": "^8.57.1",
    "globals": "^16.3.0",
    "jest": "^30.0.3",
    "jest-environment-jsdom": "^30.0.2",
    "jiti": "^2.5.1",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0"
  },
  "dependencies": {
    "@towncryerio/towncryer-js-api-client": "^1.2.0",
    "axios": "^1.4.0",
    "firebase": "^11.9.1"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=14"
  }
}
